                    }
                    else -> {
                        waterTempStatus.text = "âœ… Normal Range"
                        waterTempStatus.setTextColor(getColor(android.R.color.holo_green_light))
                    }
                }
                
                // Temperature trend
                waterTempTrend.text = when {
                    waterTemp > lastTempValue + 1 -> "â†—"
                    waterTemp < lastTempValue - 1 -> "â†˜"
                    else -> "â†’"
