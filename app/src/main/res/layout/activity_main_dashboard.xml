<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a1a1a"
    android:padding="16dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ  Home Automation Hub"
            android:textSize="28sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System Online - All Systems Operational"
            android:textSize="16sp"
            android:textColor="#4CAF50"
            android:gravity="center" />

        <TextView
            android:id="@+id/timestampText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Update: --:--"
            android:textSize="14sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Data Usage Analytics Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#2a2a2a"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header with Chart Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Usage Analytics"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Analytics Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Total Points -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ˆ"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/totalPointsValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Points"
                        android:textSize="10sp"
                        android:textColor="#888888" />

                </LinearLayout>

                <!-- Active Sensors -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¡"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/activeSensorsValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="#2196F3"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Sensors"
                        android:textSize="10sp"
                        android:textColor="#888888" />

                </LinearLayout>

                <!-- Data Rate -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš¡"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/dataRateValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/min"
                        android:textSize="20sp"
                        android:textColor="#FF9800"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Rate"
                        android:textSize="10sp"
                        android:textColor="#888888" />

                </LinearLayout>

            </LinearLayout>

            <!-- Data Source Breakdown -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Source Breakdown"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Temperature Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ¡ï¸ Temperature:"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/temperatureDataCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 points"
                    android:textSize="12sp"
                    android:textColor="#4CAF50" />

            </LinearLayout>

            <!-- Humidity Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’§ Humidity:"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/humidityDataCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 points"
                    android:textSize="12sp"
                    android:textColor="#2196F3" />

            </LinearLayout>

            <!-- Wind Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¨ Wind:"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/windDataCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 points"
                    android:textSize="12sp"
                    android:textColor="#FF9800" />

            </LinearLayout>

            <!-- Power Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Power:"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/powerDataCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 points"
                    android:textSize="12sp"
                    android:textColor="#9C27B0" />

            </LinearLayout>

            <!-- DVR Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¹ DVR:"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/dvrDataCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 points"
                    android:textSize="12sp"
                    android:textColor="#F44336" />

            </LinearLayout>

            <!-- Last Updated -->
            <TextView
                android:id="@+id/dataAnalyticsTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Updated: --:--"
                android:textSize="10sp"
                android:textColor="#666666"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Dashboard Grid - Lower Quarter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Top Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Security Block -->
            <androidx.cardview.widget.CardView
                android:id="@+id/securityCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                app:cardBackgroundColor="#2D5016"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security"
                        android:textSize="24sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/securityStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 Zones Armed"
                        android:textSize="12sp"
                        android:textColor="#B8D4A0" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SCADA Block -->
            <androidx.cardview.widget.CardView
                android:id="@+id/scadaCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                app:cardBackgroundColor="#1A237E"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SCADA"
                        android:textSize="24sp"
                        android:textColor="#FF9800"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SCADA"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/scadaStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Water: Normal"
                        android:textSize="12sp"
                        android:textColor="#9FA8DA" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Bottom Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- IDS Block -->
            <androidx.cardview.widget.CardView
                android:id="@+id/idsCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                app:cardBackgroundColor="#BF360C"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IDS"
                        android:textSize="24sp"
                        android:textColor="#FF5722"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IDS"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/idsStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Controller Ready"
                        android:textSize="12sp"
                        android:textColor="#FFAB91" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- IPERL Block -->
            <androidx.cardview.widget.CardView
                android:id="@+id/iperlCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                app:cardBackgroundColor="#4A148C"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IPERL"
                        android:textSize="24sp"
                        android:textColor="#E91E63"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IPERL"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/iperlStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Meters Online"
                        android:textSize="12sp"
                        android:textColor="#E1BEE7" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>