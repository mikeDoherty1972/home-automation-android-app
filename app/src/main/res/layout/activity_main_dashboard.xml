<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a1a1a"
    android:padding="16dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ  Home Automation Hub"
            android:textSize="28sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System Online - All Systems Operational"
            android:textSize="16sp"
            android:textColor="#4CAF50"
            android:gravity="center" />

        <TextView
            android:id="@+id/timestampText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Update: --:--"
            android:textSize="14sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>


    <!-- Dashboard Grid - Lower Quarter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Top Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Security Block -->
            <androidx.cardview.widget.CardView
                android:id="@+id/securityCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                app:cardBackgroundColor="#2D5016"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security"
                        android:textSize="24sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/securityStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 Zones Armed"
                        android:textSize="12sp"
                        android:textColor="#B8D4A0" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SCADA Block -->
            <androidx.cardview.widget.CardView
                android:id="@+id/scadaCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                app:cardBackgroundColor="#1A237E"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SCADA"
                        android:textSize="24sp"
                        android:textColor="#FF9800"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SCADA"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/scadaStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Water: Normal"
                        android:textSize="12sp"
                        android:textColor="#9FA8DA" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Bottom Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- IDS Block -->
            <androidx.cardview.widget.CardView
                android:id="@+id/idsCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                app:cardBackgroundColor="#BF360C"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IDS"
                        android:textSize="24sp"
                        android:textColor="#FF5722"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IDS"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/idsStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Controller Ready"
                        android:textSize="12sp"
                        android:textColor="#FFAB91" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- IPERL Block -->
            <androidx.cardview.widget.CardView
                android:id="@+id/iperlCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                app:cardBackgroundColor="#4A148C"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IPERL"
                        android:textSize="24sp"
                        android:textColor="#E91E63"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IPERL"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/iperlStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Meters Online"
                        android:textSize="12sp"
                        android:textColor="#E1BEE7" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>